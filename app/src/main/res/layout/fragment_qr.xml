<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="vertical"
    android:id="@+id/qr_fragment"

    android:animateLayoutChanges="true"
    tools:context="idk14.pfi3_finalproject_group1.ActionBarIcons.QrFragment"

    android:background="#fff"

    >

    <!--   android:background="#ffdee5da".-->

    <ImageView
        android:layout_width="300dp"
        android:layout_height="120dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"

        android:id="@+id/imageView3"
        android:scaleType="fitCenter"

        android:src= "@drawable/carnation3"
   />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"

        android:text="@string/active_qr_codes"
        android:textColor="#ff7e8ab9"
        android:textStyle="bold"
        android:textSize="40sp"


        android:id="@+id/textView2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:gravity="center"


        android:textSize="18sp"
        android:text="@string/qr_description"
        android:textColor="#ff7e8ab9"

        android:id="@+id/textView"


       />


    <ImageView
        android:layout_width="300dp"
        android:layout_height="120dp"
        android:layout_gravity="center_horizontal"

        android:scaleType="fitCenter"
        android:src="@drawable/scanitem2"

        android:id="@+id/scan"

        />



    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingRight="10dp"
        android:paddingLeft="10dp"


        android:text="Next"
        android:id="@+id/button3"

        android:layout_gravity="center"

        android:textColor="#fff"
        android:background="@drawable/shape"
        android:textSize="20sp"


        android:shadowColor="#A8A8A8"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"
        />

</LinearLayout>
