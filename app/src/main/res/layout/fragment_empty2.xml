<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="idk14.pfi3_finalproject_group1.EmptyFragment">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"

        android:hint="Empty!"

        android:textSize="30sp"
        android:id="@+id/treasureText1"
        android:textColor="#ff7e8ab9"
        android:textStyle="bold"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_gravity="center"

        android:text="@string/empty_message"
        android:textColor="#ff7e8ab9"
        android:textSize="20sp"
        android:id="@+id/textViewEmpty"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_below="@+id/imageViewSad"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_gravity="center_horizontal"
        android:padding="20dp"
        android:layout_marginBottom="12dp"

        android:id="@+id/imageViewSad"
        android:src="@drawable/empty_icon"
        android:layout_below="@+id/treasureText1"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
